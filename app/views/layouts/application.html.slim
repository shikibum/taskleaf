doctype html
html
  head
    title
      | Taskleaf
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  body
    .app-title.navbar.navbar-expand-md.navbar-light.bg-light
      .navbar-brand Taskleaf

      ul.navbaar-nav.ml-auto
        - if current_user
          li.navbar-item = link_to 'タスク一覧', task_path, class: 'nav-link'
          - if current_user.admin?
            li.navbar-item = link_to 'ユーザー一覧', admin_users_path, class: 'nav-link'
          li.navbar-item = link_to 'ログアウト', logout_path, method: :delete, class: 'nav-link'
        - else
          li.navbar-item = link_to 'ログイン', login_path, class: 'nav-link'

    .container
      - if flash.notice.present?
      .alert.alert-success = flash.notice
      = yield
